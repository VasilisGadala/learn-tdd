{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "inlineSourceMap": true,
    "jsx": "react-jsx" // Add this line to support JSX
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"  // Add this line to include .tsx files
  ],
  "exclude": [
    "node_modules"
  ]
}
